generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model VisitCount {
  id        Int      @id @default(autoincrement())
  date      String   @unique // YYYY-MM-DD 형식
  count     Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String   @db.Text
  createdAt DateTime @default(now())

  @@index([createdAt])
}
